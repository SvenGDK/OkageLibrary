<Window x:Class="CopyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OkageLibrary"
        mc:Ignorable="d"
        Title="Backing up data from USB" Height="133" Width="574" Background="#FF3E3E3E" ResizeMode="CanMinimize">
    <Grid>
        <ProgressBar x:Name="CopyProgressBar" HorizontalAlignment="Left" Height="20" Margin="25,46,0,0" VerticalAlignment="Top" Width="520" Foreground="#FF00B8FF"/>
        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" Margin="25,22,0,0" TextWrapping="Wrap" Text="Please wait ..." VerticalAlignment="Top" Foreground="White" FontSize="14" Width="520"/>

    </Grid>
</Window>
